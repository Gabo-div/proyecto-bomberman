<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="box" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto.bomberman.helpController">
  <VBox fx:id="content">
     <Label fx:id="title" text="Controles"/>
     <Label fx:id="text" text="El movimiento del Personaje se controla con las letras W (arriba), S (abajo), A (izquierda), D (Derecha). "/>
     <Label fx:id="text" text="Para lanzar bombas (globos) se utiliza la tecla ENTER. "/>
     <VBox fx:id="buttons">
       
       <Button fx:id="exit" onAction="#Exit" text="Exit"/>
     </VBox>
  </VBox>
</VBox>
